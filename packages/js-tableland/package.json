{
  "name": "@textile/tableland",
  "version": "0.0.3",
  "description": "Boilerplate for TypeScript projects (Node.js and browser modules)",
  "author": "Allen Muncy <allen@textile.io>",
  "repository": "https://github.com/textileio/js-tableland",
  "license": "MIT",
  "keywords": [
    "typescript",
    "esbuild"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "type": "module",
  "main": "./dist/tsc/main",
  "types": "./dist/tsc/main.d.ts",
  "files": [
    "dist/**/*.js?(.map)",
    "dist/**/*.d.ts"
  ],
  "moduleTypes": {
    "jest.config.js": "cjs"
  },
  "scripts": {
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest --verbose",
    "clean": "rm -rf dist build package",
    "ts-node": "ts-node",
    "docs": "typedoc --entryPoints src/main.ts",
    "docs:html": "typedoc --entryPoints src/main.ts --plugin none",
    "tsbuild": "tsc -p tsconfig.json",
    "build": "esbuild src/main.ts --bundle --minify --sourcemap=external --outfile=dist/esbuild/main.js --format=esm",
    "build:dev": "esbuild src/main.ts --bundle --outfile=dist/esbuild/main.js --format=esm",
    "build:watch": "esbuild src/main.ts --bundle --watch --outfile=dist/esbuild/main.js --format=esm",
    "build-all": "npm run tsbuild && npm run build && node ./node_modules/add-js-extension/dist/bin.js ./dist/tsc --once"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/jest": "^27.4.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.10",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^27.4.6",
    "esbuild": "^0.14.18",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.1.1",
    "jest": "^27.4.7",
    "jest-fetch-mock": "^3.0.3",
    "prettier": "^2.5.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^9.1.1",
    "typedoc": "^0.22.0",
    "typedoc-plugin-markdown": "^3.11.12",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@stablelib/base64": "^1.0.1",
    "@textile/eth-tableland": "0.0.1",
    "add-js-extension": "^1.0.4",
    "ethers": "^5.5.2"
  }
}
