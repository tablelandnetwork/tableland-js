{
  "name": "@tableland/cli",
  "version": "1.0.0",
  "description": "Tableland command line tools",
  "main": "./dist/cli.js",
  "files": [
    "dist/**/*.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tablelandnetwork/js-tableland-cli.git"
  },
  "scripts": {
    "build": "npx tsc && chmod +x dist/cli.js",
    "package": "pkg . --targets node17-macos-x64 --output tableland",
    "lint": "eslint '**/*.{js,ts}'",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier '**/*.{ts,json,sol,md}' --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix"
  },
  "bin": {
    "tableland": "./dist/cli.js"
  },
  "pkg": {
    "scripts": "./dist/**/*.js"
  },
  "keywords": [
    "cli",
    "tableland",
    "sql",
    "ethereum"
  ],
  "license": "MIT AND Apache-2.0",
  "devDependencies": {
    "@types/node": "^17.0.35",
    "@types/node-fetch": "^2.5.12",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "pkg": "^5.5.2",
    "prettier": "^2.6.2",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "@tableland/sdk": "^1.0.0",
    "ethers": "^5.6.8",
    "node-fetch": "^2.6.7",
    "yargs": "^17.3.1"
  },
  "contributors": [
    "Carson Farmer <carson@textile.io>"
  ]
}
