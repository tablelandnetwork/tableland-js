{
  "name": "@tableland/cli",
  "version": "0.0.0",
  "description": "Tableland command line tools",
  "repository": "https://github.com/tablelandnetwork/js-tableland-cli",
  "publishConfig": {
    "access": "public"
  },
  "overrides": {
    "ethereum-waffle": {
      "@nomicfoundation/hardhat-chai-matchers": "*"
    }
  },
  "keywords": [
    "tableland",
    "sql",
    "ethereum",
    "cli",
    "database"
  ],
  "type": "module",
  "main": "./dist/cli.js",
  "module": "./dist/cli.js",
  "bin": {
    "tableland": "./dist/cli.js"
  },
  "files": [
    "dist/**/*.js"
  ],
  "scripts": {
    "lint": "eslint \"**/*.{js,ts}\"",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier \"**/*.{ts,json,sol,md}\" --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "prepublishOnly": "npm run build",
    "test": "mocha",
    "coverage": "c8 mocha",
    "clean": "rm -rf dist",
    "build": "npx tsc && chmod +x dist/cli.js",
    "tableland": "node --experimental-specifier-resolution=node ./dist/cli.js"
  },
  "license": "MIT AND Apache-2.0",
  "devDependencies": {
    "@tableland/local": "^1.3.0-pre.1",
    "@types/cosmiconfig": "^6.0.0",
    "@types/inquirer": "^9.0.2",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.2.5",
    "@types/node-fetch": "^2.6.2",
    "@types/sinon": "^10.0.13",
    "@types/yargs": "17.0.19",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "c8": "^7.12.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.4",
    "mocha": "^10.0.0",
    "mock-stdin": "^1.0.0",
    "prettier": "^2.7.1",
    "sinon": "^15.0.1",
    "tempy": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@ensdomains/ensjs": "3.0.0-alpha.64",
    "@tableland/sdk": "^4.3.0",
    "@tableland/sqlparser": "^1.0.6",
    "cli-select-2": "^2.0.0",
    "cosmiconfig": "^8.0.0",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.1",
    "inquirer": "^9.1.2",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.2.10",
    "readline": "^1.3.0",
    "table": "^6.8.1",
    "yargs": "^17.6.2"
  }
}
