{
  "name": "@tableland/cli",
  "version": "4.0.0-rc1.0",
  "description": "Tableland command line tools",
  "main": "./dist/cli.js",
  "files": [
    "dist/**/*.js"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tablelandnetwork/js-tableland-cli.git"
  },
  "scripts": {
    "build": "npx tsc && chmod +x dist/cli.js",
    "clean": "rm -rf dist",
    "package": "pkg . --targets node18-macos-x64 --output tableland",
    "lint": "eslint '**/*.{js,ts}'",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier '**/*.{ts,json,sol,md}' --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "tableland": "./dist/cli.js"
  },
  "pkg": {
    "scripts": "./dist/**/*.js"
  },
  "keywords": [
    "cli",
    "tableland",
    "sql",
    "ethereum"
  ],
  "license": "MIT AND Apache-2.0",
  "devDependencies": {
    "@types/cosmiconfig": "^6.0.0",
    "@types/inquirer": "^9.0.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.7.18",
    "@types/node-fetch": "^2.6.2",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "5.38",
    "@typescript-eslint/parser": "5.38",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "pkg": "^5.7.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@tableland/sdk": "^3.1.2",
    "cosmiconfig": "^7.0.1",
    "dotenv": "^16.0.2",
    "ethers": "^5.7.1",
    "inquirer": "^9.1.2",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.2.10",
    "yargs": "^17.5.1"
  }
}
