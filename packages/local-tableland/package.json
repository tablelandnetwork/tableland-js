{
  "name": "@tableland/local",
  "version": "0.0.0-pre11",
  "description": "Tooling to start a sandboxed Tableland network.",
  "repository": "https://github.com/tablelandnetwork/local-tableland",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "tableland",
    "sql",
    "ethereum"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "main": "./bin/cjs/main.js",
  "module": "./bin/main.js",
  "types": "./bin/main.d.ts",
  "exports": {
    ".": {
      "require": "./bin/cjs/main.js",
      "import": "./bin/main.js",
      "default": "./bin/main.js"
    }
  },
  "files": [
    "bin/*",
    "src/*"
  ],
  "scripts": {
    "test": "node --experimental-fetch --experimental-vm-modules node_modules/.bin/jest --verbose",
    "lint": "eslint src/ test/ --ext .js,.jsx,.ts,.tsx",
    "prepublishOnly": "npm run build",
    "prettier": "prettier '**/*.{ts,json,md}' --check",
    "prettier:fix": "npm run prettier -- --write",
    "clean": "rm -rf bin/*",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "up": "node bin/up.js --validator ../go-tableland --registry ../evm-tableland"
  },
  "bin": {
    "local-tableland": "bin/up.js"
  },
  "type": "module",
  "dependencies": {
    "enquirer": "^2.3.6",
    "sentencer": "^0.2.1",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@tableland/sdk": "^3.1.2",
    "@types/jest": "^27.5.1",
    "@types/sentencer": "^0.2.0",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "ethers": "^5.6.6",
    "jest": "^28.1.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8"
  }
}
